{
  "name": "portfolio-fullstack",
  "version": "1.0.0",
  "description": "Full-stack portfolio application",
  "scripts": {
  "client:build": "cd portfolio && npm run build",
  "start": "cd server && npm start",
  "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
  "server:dev": "cd server && npm run dev",
  "client:dev": "cd portfolio && npm run dev",
  "install:all": "npm install && cd server && npm install && cd ../portfolio && npm install"
},

  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  },
  "dependencies": {
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "react-scroll": "^1.9.3"
  }
}
